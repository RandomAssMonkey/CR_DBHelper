<Window x:Class="CR_DBHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CR_DBHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<DockPanel x:Name="DGWindow">
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
			<Button  Content="Hozzáad" x:Name="AddButton" Width="100"/>
			<Button Content="Módosít" x:Name="UpdateButton" Width="100"/>
			<Button  Content="Töröl" x:Name="DeleteButton" Width="100"/>
		</StackPanel>
		<DataGrid x:Name="DataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" IsReadOnly="True"/>
	</DockPanel>
</Window>
